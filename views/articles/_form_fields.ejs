<!-- TITLE -->
<div class="form-group">
    <label for="title">Title</label>
    <input required value="<% article.title %>" type="text" name="title" id="title" class="form-control">
</div>

<!-- DESCRIPTION -->
<div class="form-group">
    <label for="title">Description</label>
    <textarea required type="text" name="title" id="title" class="form-control"><% article.description %></textarea>
</div>

<!-- MARKDOWN -->
<div class="form-group">
    <label for="title">Markdown</label>
    <textarea required type="text" name="title" id="title" class="form-control"><% article.markdown %></textarea>
</div>
<br>
<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>